 <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function() {
            const itemId = {{ item.id }};
            const commentsContainer = $('#comments-container');

            // Function to format date and time
            function formatDateTime(dateTimeStr) {
                const dateTime = new Date(dateTimeStr);
                const options = { year: 'numeric', month: 'short', day: '2-digit', hour: '2-digit', minute: '2-digit' };
                return dateTime.toLocaleDateString('en-US', options);
            }

            // Function to fetch comments
            function fetchComments() {
                fetch(`/comments/${itemId}`)
                    .then(response => response.json())
                    .then(data => {
                        // Remove all existing comments
                        commentsContainer.empty();

                        // Append fetched comments to the comments container
                        data.forEach(comment => {
                            const formattedDateTime = formatDateTime(comment.createdAt);
                            const userEmail = comment.user ? comment.user.email : 'Unknown'; // Use 'Unknown' if user email is not available
                            const commentDiv = $(`<div class="comment" data-comment-id="${comment.id}"><p><strong>${userEmail}:</strong> ${comment.content}</p><p><small>${formattedDateTime}</small></p></div>`);
                            commentsContainer.append(commentDiv);
                        });
                    });
            }

            // Initial fetch of comments
            fetchComments();

            // Poll for new comments every 5 seconds
            setInterval(fetchComments, 5000);
        });


   document.addEventListener('DOMContentLoaded', function() {
    const themeToggle = document.getElementById('themeToggle');
    const icon = themeToggle.querySelector('i');
    let isDarkMode = localStorage.getItem('isDarkMode') === 'true'; 

   
    function setTheme() {
        if (isDarkMode) {
            document.body.classList.add('dark-mode');
            icon.classList.remove('fa-sun');
            icon.classList.add('fa-moon');
        } else {
            document.body.classList.remove('dark-mode');
            icon.classList.remove('fa-moon');
            icon.classList.add('fa-sun');
        }
    }

 
    setTheme();

    themeToggle.addEventListener('click', function() {
        isDarkMode = !isDarkMode;
        localStorage.setItem('isDarkMode', isDarkMode); 
        setTheme(); 
    });
});

