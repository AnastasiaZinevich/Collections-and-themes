            border-radius: 20px;
        }
        .user-icons {
            display: flex;
            align-items: center;
        }
        .user-icons .icon {
            margin-left: 20px;
            text-decoration: none;
            color: #333;
            font-weight: bold;
            display: flex;
            align-items: center;
        }
        .icon i {
            margin-right: 5px;
        }
        .hamburger {
            display: none;
            cursor: pointer;
            font-size: 24px;
        }
        main {
            padding-top: 60px;
            display: flex;
            justify-content: center;
        }
        .pin-container {
            column-count: 5;
            column-gap: 10px;
            max-width: 1200px;
            margin: 20px auto;
        }
        .pin {
            
            position: relative;
              min-height: 100px;
            margin-bottom: 10px;
            break-inside: avoid;
            background-color: #fff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .dark-mode .pin {
    background-color: var(--pin-bg-color-dark, #333); 
}
        .pin img {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
        }
        .pin button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #e60023;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            display: none;
        }
        .pin:hover button {
            display: block;
        }
        .pin:hover {
            transform: scale(1.03);
        }
        @media (max-width: 1200px) {
            .pin-container {
                column-count: 4;
            }
        }
        @media (max-width: 992px) {
            .pin-container {
                column-count: 3;
            }
            .search-bar {
                width: 40%;
            }
        }
        @media (max-width: 768px) {
            .pin-container {
                column-count: 2;
                margin: 70px auto;
                         
            }
            .search-bar {
                width: 60%;
            }
        }
        @media (max-width: 1159px) {
            .header-container {
                flex-direction: column;

            }

            .pin-container{
                padding-top: 80px!important;
            }
            .container{
            top: 150px;
    position: relative;
    }
            .logo {
                font-size: 20px;
            }
            .search-bar {
                width: 80%;
                margin-bottom: 10px;
            }
            .user-icons {
                display: none;
                flex-direction: column;
                align-items: center;
                width: 100%;
                background-color: white;
                position: absolute;
                top: 110px;
                left: 0;
                padding: 10px 0;
                border-top: 1px solid #ddd;
            }
            .user-icons .icon {
                margin: 10px 0;
            }
            .hamburger {
                display: block;
            }
            .user-icons.show {
                display: flex;
                margin-top: 20px;
            }
        }
        .pin .pin-details {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    box-sizing: border-box;
    transition: transform 0.3s;
    transform: translateY(100%);
    opacity: 0;
}

.pin:hover .pin-details {
    transform: translateY(0);
    opacity: 1;
}

.pin .pin-details .pin-title {
    font-weight: bold;
}

.pin .pin-details .pin-description {
    font-size: 14px;
    color: #666;
