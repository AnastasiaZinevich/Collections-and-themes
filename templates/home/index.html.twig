            z-index: 1000;
            display: flex;
            justify-content: center;
        }

        
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            width: 100%;
            max-width: 1200px;
        }
        .logo {
            display: flex;
            align-items: center;
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }
        .search-bar {
            margin-left: 9px;
            width: 50%;
