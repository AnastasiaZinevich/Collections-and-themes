 <!-- Отображение списка последних добавленных айтемов -->

<div class="container">
    <h2 style="font-weight: bold;">Displaying the most recently added items</h2>
    <div class="row">
        {% for item in recentItems %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a style="color: #000000; font-weight: bold; font-size: 1.9rem;" class="card-link">{{ item.name }}</a>
                        </h5>
                        <p class="card-text" style="margin-bottom: 0rem;">Collection: {{ item.collection.name }}</p>
                        <p class="card-text" style="margin-bottom: 0rem;">Author: {{ item.collection.author.email }}</p>
                        <p class="card-text">Tags: {% for tag in item.tags %}#{{ tag }}{% if not loop.last %}, {% endif %}{% endfor %}</p>
                    </div>

                    <form id="editItemForm" method="post" action="{{ path('item_edit_action', {'collectionId': item.collection.id, 'id': item.id}) }}">
                        <!-- Add form fields here -->
                    </form>
                    {%  if app.session.get('user')%}
                        <form  style="padding-left: 1.25rem; position: relative; top: -10px;">
                            <input type="hidden" name="_token" value="{{ csrf_token('like') }}">
                                <a href="{{ path('comment_page', {'itemId': item.id}) }}" class="btn btn-danger" style="background-color: #e60023;">
                                    <i class="fas fa-comment"></i> Comment
