<body>
<header>
    <div class="header-container">
        <div class="logo">
            ANAZI
        </div>
      <input type="text" id="searchInput" placeholder="Search" class="search-bar">
<div class="hamburger" onclick="toggleMenu()">
    <i class="fas fa-bars"></i>
</div>
        
       <div class="user-icons">
    {% if app.session.get('user') %}
        {% set user = app.session.get('user') %}
        <a href="{{ path('index') }}" class="icon"><i class="fas fa-home"></i>Home</a>
        <a href="{{ path('collection_create') }}" class="icon"><i class="fas fa-plus"></i>Create</a>
        <a href="{{ path('collection_index') }}" class="icon"><i class="fas fa-folder"></i>Collections</a>
        <div id="google_translate_element" class="icon"></div>
        <div style="text-decoration: none; color: #333; font-weight: bold; display: flex; align-items: center;" class="language-switch" onclick="toggleLanguage()">
            {{ app.request.locale|upper }}
        </div>
        <a href="#" class="icon" id="themeToggle"><i class="fas fa-sun"></i></a>
        <a href="{{ path('app_login') }}" class="icon"><i class="fas fa-user"></i>{{ user.email }}</a>
        {% if 'ROLE_ADMIN' in user.roles %}
            <a href="{{ path('admin_dashboard') }}" class="icon"><i class="fas fa-cogs"></i>Admin</a>
        {% endif %}
    {% else %}
        <a href="{{ path('app_register') }}" class="icon">Registration</a>
        <a href="{{ path('app_login') }}" class="icon">Entrance</a>
    {% endif %}
</div>

    </div>
</header>
    
<div class="container">
    <h1 style="font-weight: bold;">Collection items: {{ collection.name }}</h1>
    <h4>Collection category: {{ collection.category }}</h4>
    <div class="row">
        <div class="col-md-12 d-flex justify-content-between align-items-center mb-3">
            {% if app.session.get('user') and collection.author.id == app.session.get('user').id %}
                <a href="{{ path('item_new', {'collectionId': collection.id}) }}" class="btn btn-primary" style="background-color: #000000; border-color: #000000;"><i class="fas fa-plus"></i> Add New Item</a>
            {% endif %}
            <form id="sortForm">
                <button class="btn btn-secondary mr-2" type="button" onclick="sortItems('asc')"><i class="fas fa-sort-amount-up"></i><span class="sr-only"> Ascending</span></button>
                <button class="btn btn-secondary" type="button" onclick="sortItems('desc')"><i class="fas fa-sort-amount-down"></i><span class="sr-only"> Descending</span></button>
            </form>
        </div>
    </div>
    <div class="row" id="itemContainer">
        {% if items|length == 0 %}
            <div class="col-md-12">
                <p style="font-size: 1.9rem; font-weight: 600; padding-top: 20px;">Collection is empty.</p>
            </div>
        {% else %}
            {% for item in items %}
                <div class="col-md-4 mb-3 card" data-id="{{ item.id }}">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('collection_index', {'id': item.collection.id}) }}" style="color: #000000; font-weight: bold; font-size: 1.9rem;">{{ item.name }}</a>
                        </h5>
                        <p class="card-text" style="margin: 0;"><strong>Author:</strong> {{ collection.author.email }}</p>
                        {% for field, value in item.customFields %}
                            <p class="card-text">{{ field }}: {{ value }}</p>
                        {% endfor %}
                        <p class="card-text">Tags: {% for tag in item.tags %}#{{ tag }}{% if not loop.last %}, {% endif %}{% endfor %}</p>
                        
                        {% if app.session.get('user') and item.collection.author.id == app.session.get('user').id %}
                            <form id="editItemForm" method="post" action="{{ path('item_edit_action', {'collectionId': collection.id, 'id': item.id}) }}">
                                <!-- Add form fields here -->
                            </form>
                            <form method="post" action="{{ path('items_delete', {'id': item.id}) }}" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                <button class="btn btn-danger" style="background-color: #e60023;" type="submit"><i class="fas fa-trash-alt"></i> Delete</button>
                                <button type="button" class="btn btn-warning edit-button" data-id="{{ item.id }}" data-name="{{ item.name }}" data-tags="{{ item.tags|join(',') }}"><i class="fas fa-edit"></i> Edit</button>
                            </form> 
                            {% endif %}
                             {%  if app.session.get('user')%}
                                <form method="post" style=" position: relative; top: 7px;" action="{{ path('like_action', {'itemId': item.id}) }}" onsubmit="return confirm('Are you sure?');">
                                    <button class="btn btn-success" style="background-color: green;" type="submit">
                                        <i class="fas fa-thumbs-up"></i> Like ({{ item.getLikesCount() }})
                                    </button>
                                     <a href="{{ path('comment_page', {'itemId': item.id}) }}" class="btn btn-danger" style="background-color: #e60023;">
                                    <i class="fas fa-comment"></i> Comment
                                </a>
                                </form>
                               
                            
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
<script>
    function sortItems(order) {
        var container = document.getElementById('itemContainer');
        var items = container.querySelectorAll('.card');
        var itemsArray = Array.prototype.slice.call(items);
        itemsArray.sort(function(a, b) {
            var idA = parseInt(a.getAttribute('data-id'));
            var idB = parseInt(b.getAttribute('data-id'));
            if (order === 'asc') {
                return idA - idB;
            } else {
                return idB - idA;
            }
        });
        container.innerHTML = '';
        itemsArray.forEach(function(item) {
            container.appendChild(item);
        });
    }
</script>



