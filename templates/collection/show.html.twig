     .language-switch {
  position: relative;
  display: inline-block;

 padding: 3px 12px;
  cursor: pointer;
}
.language-switch .arrow {
  position: absolute;
  top: 50%;
 
  transform: translateY(-50%);
  transition: transform 0.3s ease-in-out;
}

.language-switch.active .arrow {
  transform: translateY(-50%) rotate(180deg);
}
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            overflow-x: hidden;
        }
        .container {
    position: relative;
    
    top: 100px;
    }
        header {
            position: fixed;
            width: 100%;
            background-color: white;
            border-bottom: 1px solid #ddd;
            z-index: 1000;
            display: flex;
            justify-content: center;
        }
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            width: 100%;
            max-width: 1200px;
        }
        .logo {
            display: flex;
            align-items: center;
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }
        .search-bar {
            margin-left: 9px;
            width: 50%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 20px;
        }
        .user-icons {
            display: flex;
            align-items: center;
        }
        .user-icons .icon {
            margin-left: 20px;
            text-decoration: none;
            color: #333;
            font-weight: bold;
            display: flex;
            align-items: center;
        }
        .icon i {
            margin-right: 5px;
        }
        .hamburger {
            display: none;
            cursor: pointer;
            font-size: 24px;
        }
        main {
            padding-top: 60px;
            display: flex;
            justify-content: center;
        }
        .pin-container {
            column-count: 5;
            column-gap: 10px;
            max-width: 1200px;
            margin: 20px auto;
        }
        .pin {
            position: relative;
            margin-bottom: 10px;
            break-inside: avoid;
            background-color: #fff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }
        .pin img {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
        }
        .pin button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #e60023;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            display: none;
        }
        .pin:hover button {
            display: block;
        }
        .pin:hover {
            transform: scale(1.03);
        }
        @media (max-width: 1200px) {
            .pin-container {
                column-count: 4;
            }
        }
        @media (max-width: 992px) {
            .pin-container {
                column-count: 3;
            }
            .search-bar {
                width: 40%;
            }
        }
        @media (max-width: 768px) {
              .container {
    position: relative;
    
    top: 160px;
    }
            .pin-container {
                column-count: 2;
                margin: 70px auto;
                         
            }
            .search-bar {
                width: 60%;
            }
        }
        @media (max-width: 1200px) {
             main {
            padding-top: 120px;}
            .header-container {
                flex-direction: column;

            }
            .logo {
                font-size: 20px;
            }
            .search-bar {
                width: 80%;
                margin-bottom: 10px;
            }
            .user-icons {
                display: none;
                flex-direction: column;
                align-items: center;
                width: 100%;
                background-color: white;
                position: absolute;
                top: 130px;
                left: 0;
                padding: 10px 0;
                border-top: 1px solid #ddd;
            }
            .user-icons .icon {
                margin: 10px 0;
            }
            .hamburger {
                display: block;
            }
            .user-icons.show {
                display: flex;
            }
        }
        .pin .pin-details {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    box-sizing: border-box;
    transition: transform 0.3s;
    transform: translateY(100%);
    opacity: 0;
}

.pin:hover .pin-details {
    transform: translateY(0);
    opacity: 1;
}

.pin .pin-details .pin-title {
    font-weight: bold;
}

.pin .pin-details .pin-description {
    font-size: 14px;
    color: #666;
}
.button-link {
    color: white;
    text-decoration: none;
}

