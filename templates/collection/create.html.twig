            color: #555;
        }
        .CodeMirror, .editor-toolbar {
            display: inline-block;
            vertical-align: top;
            width: 100%;
        }
        .editor-toolbar {
            width: 100%;
        }
        .editor-toolbar a {
            display: inline-block;
            margin-right: 5px;
        }
        @media (max-width: 747px) {
            
              .form-container {
           
            margin: 90px auto;
            
        }
       
