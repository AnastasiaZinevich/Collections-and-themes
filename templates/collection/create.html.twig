<body>
 <header>
    <div class="header-container">
        <div class="logo">
            ANAZI
        </div>
         <input type="text" id="searchInput" placeholder="Search" class="search-bar">
<div class="hamburger" onclick="toggleMenu()">
    <i class="fas fa-bars"></i>
</div>
        
       <div class="user-icons">
    {% if app.session.get('user') %}
        {% set user = app.session.get('user') %}
        <a href="{{ path('index') }}" class="icon"><i class="fas fa-home"></i>Home</a>
        <a href="{{ path('collection_create') }}" class="icon"><i class="fas fa-plus"></i>Create</a>
        <a href="{{ path('collection_index') }}" class="icon"><i class="fas fa-folder"></i>Collections</a>
        <div id="google_translate_element" class="icon"></div>
        <div style="text-decoration: none; color: #333; font-weight: bold; display: flex; align-items: center;" class="language-switch" onclick="toggleLanguage()">
            {{ app.request.locale|upper }}
        </div>
        <a href="#" class="icon" id="themeToggle"><i class="fas fa-sun"></i></a>
        <a href="{{ path('app_login') }}" class="icon"><i class="fas fa-user"></i>{{ user.email }}</a>
        {% if 'ROLE_ADMIN' in user.roles %}
            <a href="{{ path('admin_dashboard') }}" class="icon"><i class="fas fa-cogs"></i>Admin</a>
        {% endif %}
    {% else %}
        <a href="{{ path('app_register') }}" class="icon">Registration</a>
        <a href="{{ path('app_login') }}" class="icon">Entrance</a>
    {% endif %}
</div>

    </div>
</header>
    
<main>
    <div class="form-container">
        <h1>Create Collection</h1>
        {{ form_start(form, {'attr': {'class': 'form', 'onsubmit': 'syncEditorContent()'}}) }}
            {% if form_errors(form) %}
                <div class="alert alert-danger">You already have a collection with this name.</div>
            {% endif %}
            <div class="form-group">
                {{ form_label(form.name, 'Name') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_label(form.category, 'Category') }}
                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.category) }}
            </div>
            <div class="form-group">
                {{ form_label(form.imageFile, 'Image') }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                {{ form_errors(form.imageFile) }}
            </div>
            <div class="form-group">
                {{ form_label(form.customFields, 'Custom Fields') }}
                {{ form_widget(form.customFields, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.customFields) }}
            </div>
            <button style="position: relative; top: 10px; background-color: #000000;" class="btn btn-create">
  <i class="fas fa-plus"></i> Create
</button>
           
        {{ form_end(form) }}
        <a href="{{ path('collection_index') }}" style="color: #000000;">Back to collections</a>
    </div>
</main>

